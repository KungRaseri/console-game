{
  "metadata": {
    "description": "Dynamic response templates for NPC dialogue during conversations",
    "version": "4.0",
    "lastUpdated": "2025-12-29",
    "type": "social_dialogue_responses_catalog"
  },
  "componentKeys": ["affirmative", "negative", "questioning", "emotional", "informative", "trading"],
  "components": {
    "affirmative": [
      {
        "name": "agreement",
        "displayName": "Agreement",
        "rarityWeight": 10,
        "description": "NPC agrees with player",
        "templates": [
          "Indeed, {player_name}. You speak wisely.",
          "Aye, that's the truth of it.",
          "I couldn't agree more.",
          "Precisely what I was thinking.",
          "You've got the right idea."
        ]
      },
      {
        "name": "acceptance",
        "displayName": "Acceptance",
        "rarityWeight": 12,
        "description": "NPC accepts a request or offer",
        "templates": [
          "Very well. I'll do as you ask.",
          "Consider it done.",
          "I accept your offer.",
          "You have my agreement.",
          "I'll see to it personally."
        ]
      }
    ],
    "negative": [
      {
        "name": "refusal",
        "displayName": "Refusal",
        "rarityWeight": 15,
        "description": "NPC refuses a request",
        "templates": [
          "I'm afraid I must decline.",
          "That's not something I can do.",
          "I cannot agree to that.",
          "My answer is no.",
          "I'm sorry, but I must refuse."
        ]
      },
      {
        "name": "disagreement",
        "displayName": "Disagreement",
        "rarityWeight": 18,
        "description": "NPC disagrees with player",
        "templates": [
          "I don't see it that way.",
          "We'll have to agree to disagree.",
          "That's not how I understand it.",
          "I beg to differ.",
          "I can't support that view."
        ]
      }
    ],
    "questioning": [
      {
        "name": "curiosity",
        "displayName": "Curiosity",
        "rarityWeight": 20,
        "description": "NPC asks for more information",
        "templates": [
          "Tell me more about that.",
          "What do you mean by that?",
          "Could you elaborate?",
          "I'm curious to hear more.",
          "Interesting. Go on."
        ]
      },
      {
        "name": "clarification",
        "displayName": "Clarification",
        "rarityWeight": 22,
        "description": "NPC seeks clarification",
        "templates": [
          "I'm not sure I follow. Could you explain?",
          "What exactly are you proposing?",
          "Let me make sure I understand...",
          "Could you be more specific?",
          "I need more details."
        ]
      }
    ],
    "emotional": [
      {
        "name": "gratitude",
        "displayName": "Gratitude",
        "rarityWeight": 12,
        "description": "NPC expresses thanks",
        "templates": [
          "Thank you, {player_name}. I'm grateful.",
          "I appreciate your help.",
          "You have my thanks.",
          "I'm indebted to you.",
          "I cannot thank you enough."
        ]
      },
      {
        "name": "concern",
        "displayName": "Concern",
        "rarityWeight": 25,
        "description": "NPC expresses worry",
        "templates": [
          "I'm worried about this situation.",
          "This troubles me greatly.",
          "I fear things may go poorly.",
          "Something doesn't feel right.",
          "I have a bad feeling about this."
        ]
      },
      {
        "name": "anger",
        "displayName": "Anger",
        "rarityWeight": 30,
        "description": "NPC expresses displeasure",
        "templates": [
          "How dare you!",
          "This is unacceptable!",
          "I won't tolerate this!",
          "You've gone too far!",
          "This is an outrage!"
        ]
      },
      {
        "name": "joy",
        "displayName": "Joy",
        "rarityWeight": 15,
        "description": "NPC expresses happiness",
        "templates": [
          "Wonderful news!",
          "I'm delighted to hear it!",
          "This brings me joy!",
          "How marvelous!",
          "That's fantastic!"
        ]
      },
      {
        "name": "sadness",
        "displayName": "Sadness",
        "rarityWeight": 28,
        "description": "NPC expresses sorrow",
        "templates": [
          "This is a dark day.",
          "My heart is heavy.",
          "I'm deeply saddened.",
          "Such terrible news.",
          "This pains me greatly."
        ]
      }
    ],
    "informative": [
      {
        "name": "knowledge",
        "displayName": "Sharing Knowledge",
        "rarityWeight": 18,
        "description": "NPC shares information",
        "templates": [
          "Let me tell you what I know.",
          "I've heard some interesting things.",
          "Here's what you should know:",
          "Allow me to share what I've learned.",
          "I have information that might help."
        ]
      },
      {
        "name": "rumor",
        "displayName": "Spreading Rumors",
        "rarityWeight": 20,
        "description": "NPC shares gossip",
        "templates": [
          "Word on the street is...",
          "I've heard whispers that...",
          "They say...",
          "Rumor has it...",
          "Between you and me..."
        ]
      },
      {
        "name": "warning",
        "displayName": "Warning",
        "rarityWeight": 25,
        "description": "NPC warns player of danger",
        "templates": [
          "Be careful, {player_name}.",
          "Watch yourself out there.",
          "I must warn you...",
          "There's danger ahead.",
          "You'd best be on your guard."
        ]
      }
    ],
    "trading": [
      {
        "name": "haggling",
        "displayName": "Haggling",
        "rarityWeight": 22,
        "description": "NPC negotiates price",
        "templates": [
          "I can't go that low. How about {price}?",
          "That's not enough. Make it {price}.",
          "I could do {price}, but that's my final offer.",
          "You drive a hard bargain. {price} and we have a deal.",
          "I'll meet you halfway at {price}."
        ]
      },
      {
        "name": "deal_made",
        "displayName": "Deal Made",
        "rarityWeight": 15,
        "description": "NPC confirms transaction",
        "templates": [
          "You have a deal!",
          "Sold!",
          "Pleasure doing business with you.",
          "We have an agreement.",
          "It's yours!"
        ]
      },
      {
        "name": "no_deal",
        "displayName": "No Deal",
        "rarityWeight": 20,
        "description": "NPC refuses transaction",
        "templates": [
          "I can't accept that offer.",
          "Sorry, no deal.",
          "That's not enough for me.",
          "You'll have to do better than that.",
          "I'm afraid we can't do business."
        ]
      }
    ]
  }
}
