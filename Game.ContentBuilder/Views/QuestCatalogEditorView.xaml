<UserControl x:Class="Game.ContentBuilder.Views.QuestCatalogEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.ContentBuilder.Views"
             xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesign.Brush.Background}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesign.Brush.Primary}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quest Catalog Editor (v4.0)" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                    <TextBlock Text="{Binding FileName}" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                               Opacity="0.7"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                    <Button Command="{Binding SaveCommand}"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            ToolTip="Save Changes (Ctrl+S)"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <mdi:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                    
                    <mdi:Chip Content="Modified" 
                              Visibility="{Binding IsDirty, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="8,0,0,0"
                              Background="{DynamicResource MaterialDesign.Brush.Secondary}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="16">
            
            <!-- Templates Tab -->
            <TabItem Header="Templates">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quest Types Tree -->
                    <DockPanel Grid.Column="0">
                        <TextBlock DockPanel.Dock="Top" Text="Quest Types" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,8"/>
                        
                        <TreeView ItemsSource="{Binding QuestTypes}" 
                                  SelectedItemChanged="QuestType_SelectedItemChanged">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                    <Setter Property="IsExpanded" Value="True"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Difficulties}">
                                    <StackPanel Orientation="Horizontal">
                                        <mdi:PackIcon Kind="BookOpenVariant" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                    </StackPanel>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <mdi:PackIcon Kind="ChartBoxOutline" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding DisplayName}"/>
                                                <TextBlock Text="{Binding TemplateCount, StringFormat=' ({0})'}" 
                                                           Opacity="0.6" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DockPanel>

                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                                  Background="{DynamicResource MaterialDesign.Brush.Foreground}" Opacity="0.1"/>

                    <!-- Templates List -->
                    <DockPanel Grid.Column="2">
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                            <TextBlock Text="Templates" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            <Button Command="{Binding NewTemplateCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <mdi:PackIcon Kind="Plus" Margin="0,0,8,0"/>
                                    <TextBlock Text="New Template"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <ListBox ItemsSource="{Binding Templates}" 
                                 SelectedItem="{Binding SelectedTemplate}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap" 
                                                       Opacity="0.7" 
                                                       MaxWidth="250"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <mdi:Chip Content="{Binding BaseGoldReward, StringFormat='{}{0}g'}" 
                                                          Margin="0,0,4,0" FontSize="10"/>
                                                <mdi:Chip Content="{Binding BaseXpReward, StringFormat='{}{0} XP'}" 
                                                          Margin="0,0,4,0" FontSize="10"/>
                                                <mdi:Chip Content="{Binding RarityWeight, StringFormat='Weight: {0}'}" 
                                                          FontSize="10"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>

                    <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" 
                                  Background="{DynamicResource MaterialDesign.Brush.Foreground}" Opacity="0.1"/>

                    <!-- Template Editor -->
                    <ScrollViewer Grid.Column="4" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16" Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Template Details" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                       Margin="0,0,0,16"/>

                            <TextBox mdi:HintAssist.Hint="Name (CamelCase)" 
                                     Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,16"/>

                            <TextBox mdi:HintAssist.Hint="Display Name" 
                                     Text="{Binding EditDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,16"/>

                            <TextBox mdi:HintAssist.Hint="Description (use {placeholders})" 
                                     Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     MinLines="3"
                                     MaxLines="6"
                                     AcceptsReturn="True"
                                     Margin="0,0,0,8"/>

                            <!-- Preview Description -->
                            <Border Background="{DynamicResource MaterialDesign.Brush.Chip.Background}"
                                    Padding="12" 
                                    CornerRadius="4"
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Preview:" FontWeight="Bold" FontSize="10" Opacity="0.7"/>
                                    <TextBlock Text="{Binding PreviewDescription}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Detected Placeholders -->
                            <ItemsControl ItemsSource="{Binding DetectedPlaceholders}" 
                                          Margin="0,0,0,16">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <mdi:Chip Content="{Binding}" 
                                                  Margin="0,0,4,4" 
                                                  FontSize="10"
                                                  Icon="CurlyBraces"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" 
                                         mdi:HintAssist.Hint="Base Gold Reward" 
                                         Text="{Binding EditBaseGoldReward, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,8,16"/>

                                <TextBox Grid.Column="1" 
                                         mdi:HintAssist.Hint="Base XP Reward" 
                                         Text="{Binding EditBaseXpReward, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,16"/>
                            </Grid>

                            <TextBox mdi:HintAssist.Hint="Location" 
                                     Text="{Binding EditLocation, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,16"/>

                            <TextBox mdi:HintAssist.Hint="Rarity Weight (1-100)" 
                                     Text="{Binding EditRarityWeight, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" 
                                         mdi:HintAssist.Hint="Min Quantity" 
                                         Text="{Binding EditMinQuantity, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,8,16"/>

                                <TextBox Grid.Column="1" 
                                         mdi:HintAssist.Hint="Max Quantity" 
                                         Text="{Binding EditMaxQuantity, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,16"/>
                            </Grid>

                            <TextBox mdi:HintAssist.Hint="Item Type (optional)" 
                                     Text="{Binding EditItemType, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,24"/>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding DeleteTemplateCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal">
                                        <mdi:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Command="{Binding CancelEditCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,8,0">
                                    <TextBlock Text="Cancel"/>
                                </Button>
                                
                                <Button Command="{Binding SaveTemplateCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <mdi:PackIcon Kind="Check" Margin="0,0,8,0"/>
                                        <TextBlock Text="Save Template"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Locations Tab (Placeholder for future implementation) -->
            <TabItem Header="Locations">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <mdi:PackIcon Kind="MapMarker" Width="64" Height="64" Opacity="0.3"/>
                    <TextBlock Text="Location editor coming soon..." 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,16,0,0"
                               Opacity="0.6"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesign.Brush.Chip.Background}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <mdi:PackIcon Grid.Column="0" Kind="Information" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Delete Confirmation Dialog -->
        <Border Grid.RowSpan="3" 
                Background="#AA000000" 
                Visibility="{Binding ShowDeleteConfirmation, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                    Width="400"
                    Padding="24"
                    CornerRadius="4"
                    mdi:ElevationAssist.Elevation="Dp8">
                <StackPanel>
                    <TextBlock Text="Confirm Delete" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{Binding ConfirmationMessage}" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,24"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding CancelDeleteCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,8,0">
                            <TextBlock Text="Cancel"/>
                        </Button>
                        
                        <Button Command="{Binding ConfirmDeleteCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource MaterialDesign.Brush.ValidationError}">
                            <StackPanel Orientation="Horizontal">
                                <mdi:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
