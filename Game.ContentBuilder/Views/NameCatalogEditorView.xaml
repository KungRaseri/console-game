<UserControl x:Class="Game.ContentBuilder.Views.NameCatalogEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding FileName, StringFormat='Name Catalog: {0}'}" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TotalNameCount, StringFormat='Total: {0} names'}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    <Button Content="SAVE" 
                            Command="{Binding SaveFileCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            IsEnabled="{Binding IsDirty}"
                            AutomationProperties.AutomationId="SaveButton"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories Panel -->
            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Categories Header -->
                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}" 
                            Padding="16,12">
                        <TextBlock Text="Categories" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </Border>

                    <!-- Categories List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Margin="0"
                             AutomationProperties.AutomationId="CategoryList">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}"
                                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="1" 
                                            Background="{DynamicResource PrimaryHueMidBrush}"
                                            CornerRadius="10"
                                            Padding="8,2"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="{Binding Count}" 
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Add Category -->
                    <Border Grid.Row="2" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0"
                                     Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="New category name"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,8,0"
                                     AutomationProperties.AutomationId="NewCategoryInput"/>

                            <Button Grid.Row="0" Grid.Column="1"
                                    Content="ADD"
                                    Command="{Binding AddCategoryCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="AddCategoryButton"/>

                            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                    Content="REMOVE CATEGORY"
                                    Command="{Binding RemoveCategoryCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,8,0,0"
                                    AutomationProperties.AutomationId="RemoveCategoryButton"/>
                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- Names Panel -->
            <materialDesign:Card Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Names Header -->
                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}" 
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding SelectedCategory.Name, StringFormat='Names in: {0}', FallbackValue='Select a category'}" 
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="SORT A-Z"
                                        Command="{Binding SortCategoryCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,8,0"
                                        Height="32"
                                        Padding="12,4"/>
                                <Button Content="DELETE SELECTED"
                                        Command="{Binding DeleteSelectedNamesCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Height="32"
                                        Padding="12,4"
                                        AutomationProperties.AutomationId="DeleteNamesButton"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search -->
                    <TextBox Grid.Row="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search names..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="16,16,16,8"
                             AutomationProperties.AutomationId="SearchInput">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Names List -->
                    <ListBox Grid.Row="2"
                             x:Name="NamesListBox"
                             ItemsSource="{Binding SelectedCategory.Names}"
                             SelectionMode="Extended"
                             Margin="16,0,16,16"
                             AutomationProperties.AutomationId="NamesList">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="8,4"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Add Names Controls -->
                    <Border Grid.Row="3" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            Padding="16">
                        <Expander Header="Add Names" IsExpanded="True">
                            <Grid Margin="0,16,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Single Name Add -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding NewNameInput, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Add single name"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,8,0"
                                             AutomationProperties.AutomationId="NewNameInput">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Return" Command="{Binding AddNameCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    <Button Grid.Column="1"
                                            Content="ADD"
                                            Command="{Binding AddNameCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            AutomationProperties.AutomationId="AddNameButton"/>
                                </Grid>

                                <!-- Bulk Add -->
                                <TextBlock Grid.Row="1" 
                                           Text="Bulk Add (comma, semicolon, or line-separated)"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="0,0,0,8"/>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding BulkNamesInput, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Enter multiple names..."
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="80"
                                             MaxHeight="150"
                                             VerticalScrollBarVisibility="Auto"
                                             Margin="0,0,8,0"
                                             AutomationProperties.AutomationId="BulkNamesInput"/>
                                    <Button Grid.Column="1"
                                            Content="BULK ADD"
                                            Command="{Binding BulkAddNamesCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            VerticalAlignment="Bottom"
                                            AutomationProperties.AutomationId="BulkAddButton"/>
                                </Grid>
                            </Grid>
                        </Expander>
                    </Border>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
