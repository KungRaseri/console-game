<UserControl x:Class="Game.ContentBuilder.Views.ItemEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="250"/>
            </Grid.ColumnDefinitions>

        <!-- Left Panel: List of Items -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                Padding="8"
                materialDesign:ElevationAssist.Elevation="Dp2">
            <DockPanel>
                <!-- Header -->
                <materialDesign:ColorZone DockPanel.Dock="Top"
                                         Mode="PrimaryMid"
                                         Padding="8"
                                         Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FormatListBulleted" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Items" 
                                 VerticalAlignment="Center"
                                 FontWeight="Medium"/>
                        <TextBlock Text="{Binding Items.Count, StringFormat=' ({0})'}"
                                 VerticalAlignment="Center"
                                 Opacity="0.7"
                                 Margin="4,0,0,0"/>
                    </StackPanel>
                </materialDesign:ColorZone>

                <!-- Action Buttons -->
                <StackPanel DockPanel.Dock="Bottom" 
                           Orientation="Horizontal" 
                           Margin="0,8,0,0">
                    <Button Content="ADD"
                           Command="{Binding AddItemCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Margin="0,0,4,0"/>
                    <Button Content="DELETE"
                           Command="{Binding DeleteItemCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>

                <!-- List of Items -->
                <ListBox ItemsSource="{Binding Items}"
                        SelectedItem="{Binding SelectedItem}"
                        DisplayMemberPath="Name"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,8"/>
            </DockPanel>
        </Border>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" 
                     Width="5" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch"
                     Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"/>

        <!-- Right Panel: Editor Form -->
        <Border Grid.Column="2" 
                Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                Padding="16"
                materialDesign:ElevationAssist.Elevation="Dp2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel IsEnabled="{Binding SelectedItem, Converter={StaticResource NotNullToBooleanConverter}}">
                    
                    <!-- Header -->
                    <materialDesign:ColorZone Mode="PrimaryMid"
                                             Padding="12"
                                             Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileEdit" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Edit Item" 
                                     VerticalAlignment="Center"
                                     FontWeight="Medium"
                                     FontSize="16"/>
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <!-- Validation Errors -->
                    <Border Background="#FFEBEE" 
                           BorderBrush="#F44336" 
                           BorderThickness="1" 
                           Padding="12"
                           Margin="0,0,0,16"
                           Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="AlertCircle" 
                                                       Foreground="#F44336"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Validation Errors" 
                                         Foreground="#F44336"
                                         FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ValidationErrors}" 
                                     TextWrapping="Wrap"
                                     Foreground="#D32F2F"/>
                        </StackPanel>
                    </Border>

                    <!-- Name Field -->
                    <TextBox Text="{Binding SelectedItem.Name, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Name"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,0,16"/>

                    <!-- Display Name Field -->
                    <TextBox Text="{Binding SelectedItem.DisplayName, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Display Name"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,0,16"/>

                    <!-- Rarity Field -->
                    <ComboBox ItemsSource="{Binding Rarities}"
                             SelectedItem="{Binding SelectedItem.Rarity}"
                             materialDesign:HintAssist.Hint="Rarity"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             Margin="0,0,0,16"/>

                    <!-- Traits Section -->
                    <TextBlock Text="Traits" 
                              FontWeight="Medium" 
                              FontSize="14"
                              Margin="0,8,0,8"/>
                    
                    <DataGrid ItemsSource="{Binding SelectedItem.Traits}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="True"
                             CanUserDeleteRows="True"
                             materialDesign:DataGridAssist.CellPadding="8"
                             materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                             Margin="0,0,0,16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Trait Type" 
                                              Binding="{Binding Key}"
                                              Width="*"
                                              MinWidth="150"/>
                            <DataGridTextColumn Header="Value" 
                                              Binding="{Binding Value}"
                                              Width="*"
                                              MinWidth="100"/>
                            <DataGridTextColumn Header="Type" 
                                              Binding="{Binding Type}"
                                              Width="*"
                                              MinWidth="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Margin="0,16,0,0">
                        <Button Content="CANCEL"
                               Command="{Binding CancelCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,8,0"/>
                        <Button Content="SAVE"
                               Command="{Binding SaveCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- GridSplitter (between editor and metadata) -->
        <GridSplitter Grid.Column="3" 
                     Width="5" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch"
                     Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"/>

        <!-- Right Panel: Metadata & Notes -->
        <Border Grid.Column="4" 
                Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                Padding="12"
                materialDesign:ElevationAssist.Elevation="Dp2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <materialDesign:ColorZone Mode="PrimaryMid"
                                             Padding="10"
                                             Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Information" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,6,0"/>
                            <TextBlock Text="Metadata &amp; Notes" 
                                     VerticalAlignment="Center"
                                     FontWeight="Medium"
                                     FontSize="14"/>
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <!-- User-Editable Metadata -->
                    <materialDesign:Card Padding="12" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="File Information" 
                                     FontWeight="Medium" 
                                     FontSize="13"
                                     Margin="0,0,0,12"/>
                            
                            <!-- Description -->
                            <TextBox Text="{Binding MetadataDescription, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Description"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinLines="2"
                                    MaxLines="4"
                                    Margin="0,0,0,12"/>

                            <!-- Version -->
                            <TextBox Text="{Binding MetadataVersion, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Version"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,12"/>

                            <!-- Tags -->
                            <TextBox Text="{Binding MetadataTags, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Tags (comma-separated)"
                                    materialDesign:HintAssist.HelperText="e.g., weapons, modifiers, prefixes"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Auto-Generated Metadata (Read-Only) -->
                    <materialDesign:Card Padding="12" Margin="0,0,0,12"
                                        Background="{DynamicResource MaterialDesign.Brush.Background}">
                        <StackPanel>
                            <TextBlock Text="Auto-Generated" 
                                     FontWeight="Medium" 
                                     FontSize="13"
                                     Margin="0,0,0,12"/>

                            <!-- Last Updated -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Last Updated" 
                                         FontSize="11" 
                                         Opacity="0.7"
                                         Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding MetadataLastUpdated}" 
                                         FontSize="12"/>
                            </StackPanel>

                            <!-- File Type -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="File Type" 
                                         FontSize="11" 
                                         Opacity="0.7"
                                         Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding MetadataFileType}" 
                                         FontSize="12"/>
                            </StackPanel>

                            <!-- Total Items -->
                            <StackPanel>
                                <TextBlock Text="Total Items" 
                                         FontSize="11" 
                                         Opacity="0.7"
                                         Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding MetadataTotalItems}" 
                                         FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Notes Section -->
                    <materialDesign:Card Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="NoteText" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"
                                                       Width="16"
                                                       Height="16"/>
                                <TextBlock Text="Notes" 
                                         FontWeight="Medium" 
                                         FontSize="13"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBox Text="{Binding MetadataNotes, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Development notes, TODOs, etc."
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinLines="6"
                                    MaxLines="12"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </materialDesign:Card>

                </StackPanel>
            </ScrollViewer>
        </Border>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="1" 
                                 Mode="PrimaryLight" 
                                 Padding="8">
            <TextBlock Text="{Binding StatusMessage}" 
                      VerticalAlignment="Center"/>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
