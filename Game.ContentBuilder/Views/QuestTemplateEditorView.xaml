<UserControl x:Class="Game.ContentBuilder.Views.QuestTemplateEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:Game.ContentBuilder.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             d:DataContext="{d:DesignInstance Type=vm:QuestTemplateEditorViewModel}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding FileName, StringFormat='Quest Templates: {0}'}" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="SAVE"
                        Command="{Binding SaveFileCommand}"
                        IsEnabled="{Binding IsDirty}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        AutomationProperties.AutomationId="SaveButton"/>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Quest Type Tree -->
            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tree Header -->
                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Padding="12">
                        <TextBlock Text="QUEST TYPES" 
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- Tree View -->
                    <TreeView Grid.Row="1"
                              ItemsSource="{Binding QuestTypes}"
                              AutomationProperties.AutomationId="QuestTypeTree">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type vm:QuestTypeNode}"
                                                      ItemsSource="{Binding Difficulties}">
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>

                            <DataTemplate DataType="{x:Type vm:QuestDifficultyNode}">
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <materialDesign:PackIcon Kind="FileDocument" 
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding DisplayName, Mode=OneWay}"/>
                                        <Run Text=" (" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <Run Text="{Binding TemplateCount, Mode=OneWay}" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <Run Text=")" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                <EventSetter Event="Selected" Handler="DifficultyNode_Selected"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch"/>

            <!-- Right: Templates & Editor -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <materialDesign:Card Grid.Row="0" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search templates..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 AutomationProperties.AutomationId="SearchBox"/>

                        <Button Grid.Column="1"
                                Content="ADD TEMPLATE"
                                Command="{Binding AddTemplateCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Margin="8,0,0,0"
                                AutomationProperties.AutomationId="AddTemplateButton"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Templates List or Editor -->
                <Grid Grid.Row="1">
                    <!-- Templates List -->
                    <materialDesign:Card Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ListBox ItemsSource="{Binding Templates}"
                                 SelectedItem="{Binding SelectedTemplate}"
                                 AutomationProperties.AutomationId="TemplatesList">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" 
                                            Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Template Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                           TextWrapping="Wrap"
                                                           Opacity="0.7"
                                                           Margin="0,4,0,8"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                        <materialDesign:PackIcon Kind="TreasureChest" 
                                                                                 Width="16" Height="16"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,4,0"
                                                                                 Foreground="Gold"/>
                                                        <TextBlock Text="{Binding BaseGoldReward}"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="Gold"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                        <materialDesign:PackIcon Kind="Star" 
                                                                                 Width="16" Height="16"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,4,0"
                                                                                 Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                                                        <TextBlock Text="{Binding BaseXpReward}"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding RarityWeight, StringFormat='Weight: {0}'}"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.6"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Top"
                                                        Margin="8,0,0,0">
                                                <Button Command="{Binding DataContext.EditTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Edit"
                                                        Width="32" Height="32">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.CloneTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Clone"
                                                        Width="32" Height="32">
                                                    <materialDesign:PackIcon Kind="ContentCopy" Width="20" Height="20"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeleteTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Delete"
                                                        Width="32" Height="32"
                                                        Foreground="{DynamicResource SecondaryHueMidBrush}">
                                                    <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </materialDesign:Card>

                    <!-- Template Editor -->
                    <materialDesign:Card Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Padding="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Quest Template Editor"
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,16"/>

                                <!-- Basic Properties -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBox Grid.Row="0" Grid.Column="0"
                                             Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Name (internal)"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"
                                             AutomationProperties.AutomationId="EditNameInput"/>

                                    <TextBox Grid.Row="0" Grid.Column="2"
                                             Text="{Binding EditDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Display Name"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"
                                             AutomationProperties.AutomationId="EditDisplayNameInput"/>

                                    <TextBox Grid.Row="1" Grid.Column="0"
                                             Text="{Binding EditRarityWeight, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Rarity Weight"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>

                                    <TextBox Grid.Row="1" Grid.Column="2"
                                             Text="{Binding EditLocation, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Location"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>

                                    <TextBox Grid.Row="2" Grid.Column="0"
                                             Text="{Binding EditBaseGoldReward, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Base Gold Reward"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>

                                    <TextBox Grid.Row="2" Grid.Column="2"
                                             Text="{Binding EditBaseXpReward, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Base XP Reward"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>

                                    <TextBox Grid.Row="3" Grid.Column="0"
                                             Text="{Binding EditMinQuantity, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Min Quantity"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>

                                    <TextBox Grid.Row="3" Grid.Column="2"
                                             Text="{Binding EditMaxQuantity, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Max Quantity"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16"/>
                                </Grid>

                                <!-- Description with Placeholders -->
                                <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Description (use {placeholders})"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         TextWrapping="Wrap"
                                         MinLines="3"
                                         MaxLines="5"
                                         Margin="0,0,0,8"
                                         AutomationProperties.AutomationId="EditDescriptionInput"/>

                                <!-- Detected Placeholders -->
                                <ItemsControl ItemsSource="{Binding DetectedPlaceholders}" Margin="0,0,0,16">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Chip Content="{Binding}"
                                                                 Margin="0,0,4,4"
                                                                 Icon="{materialDesign:PackIcon Kind=CodeBraces}"
                                                                 IconBackground="{DynamicResource SecondaryHueMidBrush}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>

                                <!-- Preview -->
                                <materialDesign:Card Background="{DynamicResource MaterialDesignDivider}" 
                                                     Padding="12" 
                                                     Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="PREVIEW"
                                                   Style="{StaticResource MaterialDesignCaption}"
                                                   FontWeight="Bold"
                                                   Opacity="0.7"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding PreviewDescription}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="SAVE"
                                            Command="{Binding SaveTemplateCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="4"
                                            Margin="0,0,8,0"
                                            AutomationProperties.AutomationId="SaveTemplateButton"/>
                                    <Button Content="CANCEL"
                                            Command="{Binding CancelEditCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="4"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </Grid>

        <!-- Delete Confirmation Dialog -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#CC000000"
                Visibility="{Binding ShowDeleteConfirmation, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    MaxWidth="450"
                    Padding="24"
                    CornerRadius="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    materialDesign:ElevationAssist.Elevation="Dp8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="AlertCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Confirm Delete"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ConfirmationMessage}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="DELETE"
                                Command="{Binding ConfirmDeleteCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{DynamicResource SecondaryHueMidBrush}"
                                Margin="0,0,8,0"
                                Width="100"
                                AutomationProperties.AutomationId="ConfirmDeleteButton"/>
                        <Button Content="CANCEL"
                                Command="{Binding CancelDeleteCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Width="100"
                                AutomationProperties.AutomationId="CancelDeleteButton"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
