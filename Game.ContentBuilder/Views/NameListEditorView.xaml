<UserControl x:Class="Game.ContentBuilder.Views.NameListEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200" MaxWidth="350"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Categories -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                    Padding="8"
                    materialDesign:ElevationAssist.Elevation="Dp2">
                <DockPanel>
                    <!-- Header -->
                    <materialDesign:ColorZone DockPanel.Dock="Top"
                                             Mode="PrimaryMid"
                                             Padding="8"
                                             Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderMultiple" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Categories" 
                                     VerticalAlignment="Center"
                                     FontWeight="Medium"/>
                            <TextBlock Text="{Binding Categories.Count, StringFormat=' ({0})'}"
                                     VerticalAlignment="Center"
                                     Opacity="0.7"
                                     Margin="4,0,0,0"/>
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <!-- Category Action Buttons -->
                    <StackPanel DockPanel.Dock="Bottom" 
                               Orientation="Horizontal" 
                               Margin="0,8,0,0">
                        <Button Content="ADD"
                               Command="{Binding AddCategoryCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,4,0"/>
                        <Button Content="DELETE"
                               Command="{Binding RemoveCategoryCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>

                    <!-- Categories List -->
                    <ListBox ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}"
                            DisplayMemberPath="Name"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Margin="0,0,0,8"/>
                </DockPanel>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch"
                         Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"/>

            <!-- Right Panel: Names Editor -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                    Padding="16"
                    materialDesign:ElevationAssist.Elevation="Dp2">
                <DockPanel IsEnabled="{Binding SelectedCategory, Converter={StaticResource NotNullToBooleanConverter}}">
                    
                    <!-- Header -->
                    <materialDesign:ColorZone DockPanel.Dock="Top"
                                             Mode="PrimaryMid"
                                             Padding="12"
                                             Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock VerticalAlignment="Center"
                                     FontWeight="Medium"
                                     FontSize="16">
                                <Run Text="Names in:"/>
                                <Run Text="{Binding SelectedCategory.Name, FallbackValue='(none)'}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding SelectedCategory.Names.Count, StringFormat=' ({0} items)', FallbackValue=' (0 items)'}"
                                     VerticalAlignment="Center"
                                     Opacity="0.7"
                                     Margin="4,0,0,0"
                                     FontSize="14"/>
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <!-- Action Buttons -->
                    <StackPanel DockPanel.Dock="Bottom" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Margin="0,16,0,0">
                        <Button Content="CANCEL"
                               Command="{Binding CancelCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,8,0"/>
                        <Button Content="SAVE"
                               Command="{Binding SaveCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>

                    <!-- Names Management -->
                    <StackPanel DockPanel.Dock="Top">
                        
                        <!-- Add Name Section -->
                        <materialDesign:Card Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Add New Name" 
                                         FontWeight="Medium" 
                                         Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0"
                                            Text="{Binding NewNameInput, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Enter name"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,8,0">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding AddNameCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    
                                    <Button Grid.Column="1"
                                           Content="ADD"
                                           Command="{Binding AddNameCommand}"
                                           Style="{StaticResource MaterialDesignRaisedButton}"/>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Names List Section -->
                        <TextBlock Text="Current Names" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        
                        <Border BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                               BorderThickness="1"
                               CornerRadius="4">
                            <DockPanel>
                                <!-- Remove Button -->
                                <Button DockPanel.Dock="Bottom"
                                       Content="REMOVE SELECTED"
                                       Command="{Binding RemoveNameCommand}"
                                       Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Margin="8"
                                       HorizontalAlignment="Right"/>
                                
                                <!-- Names ListBox -->
                                <ListBox ItemsSource="{Binding SelectedCategory.Names}"
                                        SelectedItem="{Binding SelectedName}"
                                        MinHeight="300"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Padding="4">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                     Padding="8,4"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DockPanel>
                        </Border>
                    </StackPanel>

                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="1" 
                                 Mode="PrimaryLight" 
                                 Padding="8">
            <TextBlock Text="{Binding StatusMessage}" 
                      VerticalAlignment="Center"/>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
