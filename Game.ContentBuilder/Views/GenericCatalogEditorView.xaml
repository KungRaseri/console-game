<UserControl x:Class="Game.ContentBuilder.Views.GenericCatalogEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:Game.ContentBuilder.ViewModels"
             xmlns:converters="clr-namespace:Game.ContentBuilder.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:GenericCatalogEditorViewModel}">

    <UserControl.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Custom Converters -->
        <converters:PropertyTypeConverter x:Key="PropTypeConverter"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
        <converters:NotZeroToVisibilityConverter x:Key="NotZeroToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesign.Brush.Primary}"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding FileName}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock FontSize="12"
                               Foreground="White"
                               Opacity="0.8">
                        <Run Text="Type:"/>
                        <Run Text="{Binding CatalogType, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding SaveFileCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        Height="40"
                        Padding="24,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Save File" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Categories Panel -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesign.Brush.Background}"
                    BorderBrush="{DynamicResource MaterialDesign.Brush.Border}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                            Padding="16,12"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Border}"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Categories"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Margin="8"
                             AutomationProperties.AutomationId="CategoryList">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            AutomationProperties.AutomationId="CategoryItem">
                                    <materialDesign:PackIcon Kind="FolderOutline" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                             VerticalAlignment="Center"
                                             Opacity="0.6"
                                             FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" 
                         Width="4" 
                         HorizontalAlignment="Stretch"
                         Background="{DynamicResource MaterialDesign.Brush.Border}"/>

            <!-- Items Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Add -->
                <Border Grid.Row="0"
                        Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        Padding="16"
                        BorderBrush="{DynamicResource MaterialDesign.Brush.Border}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search items..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,12,0"/>

                        <Button Grid.Column="1"
                                Command="{Binding AddItemCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                AutomationProperties.AutomationId="ItemAddButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Add" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Items List -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto"
                            Padding="8"
                            AutomationProperties.AutomationId="ItemList">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                                       Margin="0,0,0,8"
                                       Padding="16,12"
                                       CornerRadius="4"
                                       Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}"
                                       materialDesign:ElevationAssist.Elevation="Dp2"
                                       AutomationProperties.AutomationId="ItemCard">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding DisplayName}"
                                                     FontSize="14"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,4"/>
                                            
                                            <TextBlock Text="{Binding Description}"
                                                     TextWrapping="Wrap"
                                                     Opacity="0.7"
                                                     FontSize="12"
                                                     Margin="0,0,0,8"
                                                     Visibility="{Binding Description, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Weight" 
                                                                       Width="14" Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"
                                                                       Opacity="0.6"/>
                                                <TextBlock Text="{Binding RarityWeight}"
                                                         FontSize="11"
                                                         Opacity="0.6"
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                  Orientation="Horizontal"
                                                  VerticalAlignment="Top">
                                            <Button Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource MaterialDesignIconButton}"
                                                   ToolTip="Edit">
                                                <materialDesign:PackIcon Kind="Pencil"/>
                                            </Button>
                                            
                                            <Button Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource MaterialDesignIconButton}"
                                                   ToolTip="Delete"
                                                   AutomationProperties.AutomationId="ItemDeleteButton">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="#EF5350"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <GridSplitter Grid.Column="3" 
                         Width="4" 
                         HorizontalAlignment="Stretch"
                         Background="{DynamicResource MaterialDesign.Brush.Border}"/>

            <!-- Edit Panel -->
            <Border Grid.Column="4"
                    Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                    BorderBrush="{DynamicResource MaterialDesign.Brush.Border}"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <!-- Edit Mode Content -->
                    <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"
                          AutomationProperties.AutomationId="ItemDetailsPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource MaterialDesign.Brush.Primary}"
                            Padding="16,12">
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White">
                            <Run Text="{Binding SelectedItem.DisplayName, Mode=OneWay, TargetNullValue='New Item'}"/>
                        </TextBlock>
                    </Border>

                    <!-- Edit Fields -->
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                Padding="16">
                        <StackPanel>
                            <!-- Standard Fields -->
                            <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Name (Internal)"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,16"
                                    AutomationProperties.AutomationId="NameTextBox"/>

                            <TextBox Text="{Binding EditDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Display Name"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,16"/>

                            <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Description"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinLines="3"
                                    MaxLines="6"
                                    Margin="0,0,0,16"
                                    AutomationProperties.AutomationId="DescriptionTextBox"/>

                            <TextBox Text="{Binding EditRarityWeight, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Rarity Weight"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,16"
                                    AutomationProperties.AutomationId="RarityWeightTextBox"/>

                            <!-- Dynamic Properties -->
                            <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                   Padding="12"
                                   CornerRadius="4"
                                   Margin="0,16,0,0"
                                   Visibility="{Binding DynamicProperties.Count, Converter={StaticResource NotZeroToVisibilityConverter}}"
                                   AutomationProperties.AutomationId="CustomFieldsPanel">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Additional Properties"
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>
                                        <Button Command="{Binding AddPropertyCommand}"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               Width="24" Height="24"
                                               Margin="8,0,0,0"
                                               ToolTip="Add Property"
                                               AutomationProperties.AutomationId="CustomFieldAddButton">
                                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>

                                    <ItemsControl ItemsSource="{Binding DynamicProperties}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <!-- String Property -->
                                                        <TextBox Text="{Binding StringValue, UpdateSourceTrigger=PropertyChanged}"
                                                               materialDesign:HintAssist.Hint="{Binding DisplayName}"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Visibility="{Binding Type, Converter={StaticResource PropTypeConverter}, ConverterParameter=String}"/>

                                                        <!-- Integer Property -->
                                                        <TextBox Text="{Binding IntValue, UpdateSourceTrigger=PropertyChanged}"
                                                               materialDesign:HintAssist.Hint="{Binding DisplayName}"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Visibility="{Binding Type, Converter={StaticResource PropTypeConverter}, ConverterParameter=Integer}"/>

                                                        <!-- Double Property -->
                                                        <TextBox Text="{Binding DoubleValue, UpdateSourceTrigger=PropertyChanged}"
                                                               materialDesign:HintAssist.Hint="{Binding DisplayName}"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Visibility="{Binding Type, Converter={StaticResource PropTypeConverter}, ConverterParameter=Double}"/>

                                                        <!-- Boolean Property -->
                                                        <CheckBox IsChecked="{Binding BoolValue}"
                                                                Content="{Binding DisplayName}"
                                                                Margin="0,8"
                                                                Visibility="{Binding Type, Converter={StaticResource PropTypeConverter}, ConverterParameter=Boolean}"/>

                                                        <!-- Object Property (JSON) -->
                                                        <TextBox Text="{Binding StringValue, UpdateSourceTrigger=PropertyChanged}"
                                                               materialDesign:HintAssist.Hint="{Binding DisplayName}"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               TextWrapping="Wrap"
                                                               AcceptsReturn="True"
                                                               FontFamily="Consolas"
                                                               MinLines="4"
                                                               Visibility="{Binding Type, Converter={StaticResource PropTypeConverter}, ConverterParameter=Object}"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1"
                                                           Command="{Binding DataContext.RemovePropertyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                           CommandParameter="{Binding}"
                                                           Style="{StaticResource MaterialDesignIconButton}"
                                                           Width="24" Height="24"
                                                           VerticalAlignment="Top"
                                                           ToolTip="Remove Property"
                                                           AutomationProperties.AutomationId="CustomFieldDeleteButton">
                                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource MaterialDesign.Brush.Background}"
                            Padding="16"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Border}"
                            BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Command="{Binding CancelEditCommand}"
                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="4"
                                   Margin="0,0,8,0"
                                   Padding="24,8">
                                Cancel
                            </Button>
                            
                            <Button Command="{Binding SaveItemCommand}"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="4"
                                   Padding="24,8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Check" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,4,0"/>
                                    <TextBlock Text="Save" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- No Selection Message -->
                <TextBlock Text="Select a category and item to edit"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Opacity="0.5"
                          FontSize="14"
                          Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Delete Item Confirmation Dialog -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#CC000000"
                Visibility="{Binding ShowDeleteConfirmation, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="1000">
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    MaxWidth="450"
                    Padding="24"
                    CornerRadius="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    materialDesign:ElevationAssist.Elevation="Dp8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="AlertCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Confirm Delete"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ConfirmationMessage}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="DELETE"
                                Command="{Binding ConfirmDeleteCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{DynamicResource SecondaryHueMidBrush}"
                                Margin="0,0,8,0"
                                Width="100"
                                AutomationProperties.AutomationId="ConfirmDeleteButton"/>
                        <Button Content="CANCEL"
                                Command="{Binding CancelDeleteCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Width="100"
                                AutomationProperties.AutomationId="CancelDeleteButton"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
