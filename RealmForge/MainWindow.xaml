<Window x:Class="RealmForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealmForge"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:RealmForge.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="600"
        Width="1000"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <materialDesign:DialogHost>
        <Grid>
            <!-- Main Content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Menu Bar -->
                <Menu Grid.Row="0"
                      Background="{DynamicResource MaterialDesign.Brush.Background}">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Refresh File Tree"
                                  Command="{Binding RefreshCommand}"
                                  InputGestureText="F5">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Refresh"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="E_xit"
                                  Click="Exit_Click"
                                  InputGestureText="Alt+F4">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="ExitToApp"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_View">
                        <MenuItem Header="Toggle _Console"
                                  Click="ToggleConsole_Click"
                                  InputGestureText="F12">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Console"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Preview Generated Content"
                                  Command="{Binding ShowPreviewCommand}"
                                  InputGestureText="Ctrl+P">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Eye"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem Header="_About"
                                  Click="About_Click">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Information"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>

                <!-- Main Content Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"
                                          MinWidth="200"
                                          MaxWidth="400"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"
                                          MinWidth="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - TreeView Navigation -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                            Margin="16,16,8,0"
                            CornerRadius="4"
                            materialDesign:ElevationAssist.Elevation="Dp2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- TreeView Header -->
                            <TextBlock Grid.Row="0"
                                       Text="Game Data"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Margin="16,16,16,8"/>

                            <!-- TreeView -->
                            <TreeView Grid.Row="1"
                                      ItemsSource="{Binding Categories}"
                                      SelectedItemChanged="TreeView_SelectedItemChanged"
                                      Margin="8,0,8,8"
                                      AutomationProperties.AutomationId="CategoryTreeView"
                                      AutomationProperties.Name="Game Content Categories">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem"
                                           BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                        <Setter Property="IsExpanded"
                                                Value="True"/>
                                        <Setter Property="AutomationProperties.Name"
                                                Value="{Binding Name}"/>
                                        <Setter Property="AutomationProperties.AutomationId"
                                                Value="{Binding Name, StringFormat='TreeItem_{0}'}"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="{Binding Icon}"
                                                                     Width="16"
                                                                     Height="16"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding DisplayNameWithCount}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch"
                                  Background="Transparent"
                                  ShowsPreview="True"/>

                    <!-- Right Panel - Editor Area -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                            Margin="8,16,16,0"
                            CornerRadius="4"
                            materialDesign:ElevationAssist.Elevation="Dp2">
                        <ContentControl Content="{Binding CurrentEditor}">
                            <!-- Default content when no editor is selected -->
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Style.Triggers>
                                        <Trigger Property="Content"
                                                 Value="{x:Null}">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <StackPanel VerticalAlignment="Center"
                                                                    HorizontalAlignment="Center">
                                                            <materialDesign:PackIcon Kind="FileEdit"
                                                                                     Width="96"
                                                                                     Height="96"
                                                                                     HorizontalAlignment="Center"
                                                                                     Opacity="0.3"/>
                                                            <TextBlock Text="Select an item to edit"
                                                                       FontSize="18"
                                                                       FontWeight="Light"
                                                                       HorizontalAlignment="Center"
                                                                       Margin="0,16,0,0"
                                                                       Opacity="0.7"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Border>
                </Grid>

                <!-- Status Bar -->
                <materialDesign:ColorZone Grid.Row="2"
                                          Mode="PrimaryLight"
                                          Padding="12,8"
                                          materialDesign:ElevationAssist.Elevation="Dp2"
                                          AutomationProperties.AutomationId="StatusBar">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="InformationOutline"
                                                 Width="16"
                                                 Height="16"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   VerticalAlignment="Center"
                                   FontSize="12"/>
                    </DockPanel>
                </materialDesign:ColorZone>
            </Grid>

            <!-- Global Console Panel (F12 to toggle) -->
            <Border x:Name="ConsolePanel"
                    Background="#F2000000"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,1,0,0"
                    Height="300"
                    VerticalAlignment="Bottom"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Console Header -->
                    <Border Grid.Row="0"
                            Background="#1A1A1A"
                            Padding="12,8"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Console"
                                                         Width="18"
                                                         Height="18"
                                                         Foreground="#00FF00"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="GLOBAL CONSOLE"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="#00FF00"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="(F12 to toggle)"
                                           FontSize="11"
                                           Foreground="#666666"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Click="ToggleConsole"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="24"
                                    Height="24"
                                    Foreground="#666666"
                                    ToolTip="Close Console (F12)">
                                <materialDesign:PackIcon Kind="Close"
                                                         Width="16"
                                                         Height="16"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Console Content -->
                    <TextBox x:Name="ConsoleTextBox"
                             Grid.Row="1"
                             IsReadOnly="True"
                             IsReadOnlyCaretVisible="False"
                             FontFamily="Consolas"
                             FontSize="11"
                             Foreground="#00FF00"
                             Background="#0D0D0D"
                             BorderThickness="0"
                             Padding="12"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             AcceptsReturn="True"
                             VerticalAlignment="Stretch"/>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
