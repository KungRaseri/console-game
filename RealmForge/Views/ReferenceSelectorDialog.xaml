<Window x:Class="RealmForge.Views.ReferenceSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:RealmForge.ViewModels"
        Title="JSON v4.1 Reference Selector"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cascading Selection -->
        <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Domain Selection -->
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Domain" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Domains}"
                              SelectedValue="{Binding SelectedDomain}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select domain">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Path Selection -->
                <StackPanel Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Path" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Paths}"
                              SelectedValue="{Binding SelectedPath}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select path"
                              IsEnabled="{Binding Paths.Count, Converter={StaticResource GreaterThanZeroConverter}}"/>
                </StackPanel>

                <!-- Category Selection -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Categories}"
                              SelectedValue="{Binding SelectedCategory}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select category"
                              IsEnabled="{Binding Categories.Count, Converter={StaticResource GreaterThanZeroConverter}}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Reference Options -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Reference Options" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding UseWildcard}"
                              Content="Use Wildcard (*)"
                              ToolTip="Select a random item from this category"
                              Margin="0,0,24,0"/>

                    <CheckBox Grid.Column="1"
                              IsChecked="{Binding IsOptional}"
                              Content="Optional (?)"
                              ToolTip="Reference returns null if not found instead of error"
                              Margin="0,0,24,0"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Property:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding PropertyAccess, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 materialDesign:HintAssist.Hint=".property.path"
                                 ToolTip="Access nested property (e.g., .damage or .stats.health)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Search Bar -->
        <TextBox Grid.Row="2"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Search items..."
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Items List -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Items" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Items.Count, StringFormat=' ({0})'}" 
                                       Foreground="Gray" 
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Traits}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   MaxHeight="40"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Weight, StringFormat='W: {0}'}"
                                               FontSize="11"
                                               Foreground="Gray"
                                               VerticalAlignment="Top"
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1"
                               Text="No items available. Select Domain, Path, and Category above."
                               Foreground="Gray"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="16"
                               Visibility="{Binding Items.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Preview Panel -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Preview"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,16"/>

                        <Border Background="{DynamicResource MaterialDesignDivider}"
                                Height="1"
                                Margin="0,0,0,16"/>

                        <!-- Generated Reference -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Generated Reference:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="1"
                                    Background="#F5F5F5"
                                    Padding="12"
                                    CornerRadius="4">
                                <TextBlock Text="{Binding SelectedReference, TargetNullValue='(Select an item or use wildcard)'}"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            </Border>
                        </StackPanel>

                        <!-- Preview Content -->
                        <TextBlock Text="Resolved Data:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="1"
                                Background="#F9F9F9"
                                Padding="12"
                                CornerRadius="4"
                                MaxHeight="350">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding PreviewText, TargetNullValue='No preview available'}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="CANCEL"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"/>
            <Button Content="SELECT REFERENCE"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Select_Click"
                    IsEnabled="{Binding SelectedReference, Converter={StaticResource NotNullToBooleanConverter}}"/>
        </StackPanel>
    </Grid>
</Window>
