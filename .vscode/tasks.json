{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/RealmEngine.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build-realmforge",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/RealmForge/RealmForge.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "run-realmforge",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/RealmForge/RealmForge.csproj"
			],
			"problemMatcher": "$msCompile",
			"dependsOn": "build-realmforge",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "watch-realmforge",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/RealmForge/RealmForge.csproj",
				"--non-interactive"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": false
			},
			"options": {
				"env": {
					"DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
				}
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmEngine.sln",
				"--filter",
				"Category!=UI",
				"--verbosity",
				"normal"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "test-shared",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmEngine.Shared.Tests/RealmEngine.Shared.Tests.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-core",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmEngine.Core.Tests/RealmEngine.Core.Tests.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-data",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmEngine.Data.Tests/RealmEngine.Data.Tests.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-realmforge-unit",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmForge.Tests/RealmForge.Tests.csproj",
				"--filter",
				"Category=ViewModel"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-realmforge-ui",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmForge.Tests/RealmForge.Tests.csproj",
				"--filter",
				"Category=UI"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-realmforge-integration",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmForge.Tests/RealmForge.Tests.csproj",
				"--filter",
				"Category=Integration"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-realmforge-all",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/RealmForge.Tests/RealmForge.Tests.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "test-with-coverage",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceFolder}/Game.sln",
				"--filter",
				"Category!=UI",
				"--collect:XPlat Code Coverage",
				"--settings",
				"coverage.runsettings"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "generate-coverage-report",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}/scripts/generate-coverage-report.ps1"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "test-coverage",
			"dependsOn": [
				"test-with-coverage",
				"generate-coverage-report"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean",
				"${workspaceFolder}/RealmEngine.sln"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "rebuild",
			"dependsOn": [
				"clean",
				"build"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "build-package",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}/scripts/build-game-package.ps1",
				"-Configuration",
				"Debug"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "build-package-release",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}/scripts/build-game-package.ps1",
				"-Configuration",
				"Release"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "generate-version",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}/scripts/generate-version.ps1",
				"-OutputFormat",
				"string"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		}
	]
}