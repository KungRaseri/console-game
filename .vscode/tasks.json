{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/Game/Game.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "publish",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"publish",
				"${workspaceFolder}/Game/Game.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/Game/Game.csproj"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true
		},
		{
			"label": "test-with-coverage",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"--collect:XPlat Code Coverage",
				"--settings",
				"coverage.runsettings"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "generate-coverage-report",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}/scripts/generate-coverage-report.ps1"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "test-coverage",
			"dependsOn": [
				"test-with-coverage",
				"generate-coverage-report"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		}
	]
}