    "version": "0.2.0",
    "configurations": [
        {
            "name": "Console Game (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-console",
            "program": "${workspaceFolder}/Game.Console/bin/Debug/net9.0/Game.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Game.Console",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Content Builder (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-contentbuilder",
            "program": "${workspaceFolder}/Game.ContentBuilder/bin/Debug/net9.0-windows/Game.ContentBuilder.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Game.ContentBuilder",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}